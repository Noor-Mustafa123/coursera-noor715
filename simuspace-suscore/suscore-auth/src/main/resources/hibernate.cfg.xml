
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/simuspace2</property>
		<property name="connection_pool_size">1</property>
		<property name="hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>

		<mapping class="de.soco.software.suscore.server.entity.base.AbstractPersistentObject" />
		<mapping class="de.soco.software.suscore.entity.Category" />
		<mapping class="de.soco.software.suscore.entity.Project" />
		<mapping class="de.soco.software.suscore.entity.DataObject" />
		<mapping class="de.soco.software.suscore.entity.ObjectType" />
		<mapping class="de.soco.software.suscore.entity.Report" />
		<mapping class="de.soco.software.suscore.entity.Variant" />
		<mapping class="de.soco.software.suscore.entity.MetaDataFile" />
		<mapping class="de.soco.software.suscore.entity.Status" />
		<mapping class="de.soco.software.suscore.entity.LifeCycleStrategies" />
		<mapping class="de.soco.software.suscore.entity.CustomAttributes" />
		<mapping class="de.soco.software.suscore.entity.ObjectType" />
	</session-factory>
</hibernate-configuration>