<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<!-- ############################################# Internal Services Expose ############################################# -->

	<service interface="de.soco.software.simuspace.suscore.lifecycle.manager.LifeCycleManager" ref="lifeCycleManager">
	</service>

	<service interface="de.soco.software.simuspace.suscore.lifecycle.manager.ObjectTypeConfigManager"
		ref="objectTypeConfigCacheManager">
	</service>

	<!-- ############################################# External Services Imports ############################################# -->

	<reference id="susDAO" interface="de.soco.software.simuspace.suscore.data.common.dao.SuSGenericObjectDAO">
	</reference>
	<reference id="entityManagerFactory" interface="javax.persistence.EntityManagerFactory" />
	<!-- OBJECT TYPE CONFIGURATION -->
	<bean id="objectTypeConfigCacheManager" class="de.soco.software.simuspace.suscore.lifecycle.manager.impl.ObjectTypeConfigManagerImpl"
		init-method="init">
		<property name="objectTypeDAO" ref="objectTypeDAO" />
		<property name="lifeCycleManager" ref="lifeCycleManager" />
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="lifeCycleManager" class="de.soco.software.simuspace.suscore.lifecycle.manager.impl.LifeCycleManagerImpl" init-method="init">
		<property name="susDAO" ref="susDAO" />
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="objectTypeDAO" class="de.soco.software.simuspace.suscore.lifecycle.dao.impl.ObjectTypeDAOImpl">
	</bean>

</blueprint>