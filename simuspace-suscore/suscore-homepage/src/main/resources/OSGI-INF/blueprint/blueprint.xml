<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
  xmlns:cxf="http://cxf.apache.org/blueprint/core"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

  <!-- ############################################# Internal Services Expose ############################################# -->
  <service id="homepageManagerImpl" interface="de.soco.software.simuspace.suscore.homepage.manager.HomepageManager"
    ref="homepageManager" />
  <!-- ############################################# External Services Imports ############################################# -->
  <reference id="userCommonManagerService" interface="de.soco.software.simuspace.suscore.data.manager.base.UserCommonManager" />

  <reference id="userDAO" interface="de.soco.software.simuspace.suscore.user.dao.UserDAO" />

  <reference id="entityManagerFactory" interface="javax.persistence.EntityManagerFactory" />

  <!-- ############################################# Suscore BUS ############################################# -->

  <cxf:bus id="suscore_bus">
    <cxf:inInterceptors>
      <ref component-id="susLoggingInInterceptor" />
    </cxf:inInterceptors>
    <cxf:outInterceptors>
      <ref component-id="susLoggingOutInterceptor" />
    </cxf:outInterceptors>
  </cxf:bus>



  <!-- ############################################# Services Exports ############################################# -->

  <!-- ############################################# Jax RS Server ############################################# -->
  <jaxrs:server id="homepageService" address="/homepage">
    <jaxrs:serviceBeans>
      <ref component-id="homepageServiceBean" />
    </jaxrs:serviceBeans>
    <jaxrs:providers>
      <ref component-id="jsonProvider" />
    </jaxrs:providers>
  </jaxrs:server>


  <!-- ############################################# Service Beans ############################################# -->

  <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider" />

  <bean id="susLoggingInInterceptor" class="de.soco.software.simuspace.suscore.interceptors.SusLoggingInInterceptor" />

  <bean id="susLoggingOutInterceptor" class="de.soco.software.simuspace.suscore.interceptors.SusLoggingOutInterceptor" />

  <bean id="homepageServiceBean" class="de.soco.software.simuspace.suscore.homepage.service.rest.impl.HomepageServiceImpl">
    <property name="homepageManager" ref="homepageManager" />
  </bean>

  <!-- ############################################# Manager Beans ############################################# -->
  <bean id="homepageManager" class="de.soco.software.simuspace.suscore.homepage.manager.impl.HomepageManagerImpl" init-method="init">
    <property name="userCommonManager" ref="userCommonManagerService" />
    <property name="entityManagerFactory" ref="entityManagerFactory" />
    <property name="userWidgetDAO" ref="userWidgetDAO" />
    <property name="userDAO" ref="userDAO" />
  </bean>

  <bean id="userWidgetDAO" class="de.soco.software.simuspace.suscore.homepage.dao.impl.UserWidgetDAOImpl">
  </bean>


  <!-- ############################################# Dao Beans ############################################# -->

</blueprint>