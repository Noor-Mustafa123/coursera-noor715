<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

	<!-- ############################################# Internal Services Expose ############################################# -->
	<service interface="de.soco.software.simuspace.suscore.notification.service.rest.WSService" ref="wsResource" />

	<!-- ############################################# Suscore BUS ############################################# -->

	<bean id="susCORSInterceptor" class="de.soco.software.simuspace.suscore.interceptors.EnableCORSInterceptor">
	</bean>

	<cxf:bus>
		<cxf:features>
			<cxf:logging />
		</cxf:features>
		<cxf:outInterceptors>
			<ref component-id="susCORSInterceptor" />
		</cxf:outInterceptors>
	</cxf:bus>

	<!-- ############################################# Jax RS Server ############################################# -->

	<jaxrs:server id="WSServiceEnd" address="/ws" transportId="http://cxf.apache.org/transports/websocket">
		<jaxrs:serviceBeans>
			<ref component-id="wsResource" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	<bean id="wsResource" class="de.soco.software.simuspace.suscore.notification.service.rest.impl.WSServiceImpl">
	</bean>

</blueprint>